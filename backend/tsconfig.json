{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "baseUrl": "./src", // 設置基本路徑
    "paths": {
      "@/*": ["*"] // 使用 @ 作為別名
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
