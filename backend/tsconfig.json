{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "dist",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "baseUrl": "./src", // 設置基本路徑
    "paths": {
      "@/*": ["*"], // " @/ "  => " backend/src "
      "#/*": ["../core/*"], // " #/ "  => " backend/core "
      "!/*": ["../*"] // " !/ "  => " backend/ "
    }
  },
  "include": [
    "src/**/*.ts",
    "core/**/*.ts", 
    "config/**/*.ts",
    "prisma/prismaClient.ts",
  ], // 確保 include 了 core 目錄
  "exclude": ["node_modules"]
}
