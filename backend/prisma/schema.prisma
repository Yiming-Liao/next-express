generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String

  isEmailVerified Boolean @default(false) // 信箱驗證狀態

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
